@model IEnumerable<IndustriaComercio.Entidades.Basicos.TipoActividad>

@{
    ViewBag.Title = "Index";
}

<div class="form-group row">
    <div class="col-md-4">
        <h3>Tipos de Actividades</h3>
    </div>
    <div class="col-md-8">
        <div class="float-right">
            <a class="btn btn-primary" href="@Url.Action("Create")" role="button">Crear</a>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.TipoActividadId })
        </td>
    </tr>
}

</table>
